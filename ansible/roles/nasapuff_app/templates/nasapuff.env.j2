# NASAPuff Environment Configuration
FLASK_ENV=production
FLASK_APP=nasapuff_flask.py
PYTHONPATH={{ nasapuff_flask_dir }}

# NASA API Configuration
NASA_API_KEY={{ nasapuff_environment.NASA_API_KEY }}

# Application Configuration
SECRET_KEY={{ lookup('password', '/dev/null length=32 chars=ascii_letters,digits') }}
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE={{ nasapuff_log_dir }}/app.log

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_WORKER_CLASS=gevent
GUNICORN_BIND=0.0.0.0:{{ nasapuff_app_port }} 